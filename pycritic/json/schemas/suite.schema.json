{
	"$schema": "http://json-schema.org/draft-04/schema#",
	"title": "pycritic suite",
	"type": "object",
	"properties": {
		"crit": {
			"title": "criteria",
			"type": "array",
			"items": {
				"title": "criterion",
				"type": "object",
				"properties": {
					"est": {
						"title": "estimation"
					},
					"cond": {
						"title": "conditions",
						"type": "object",
						"additionalProperties": true
					}
				},
				"required": ["est"]
			},
			"minItems": 0
		},
		"schema": {
			"title": "Request body schema",
			"type": "object",
			"properties": {
				"$schema": { "type": "string" }
			},
			"required": [ "$schema" ],
			"additionalProperties": true
		}
	}
}